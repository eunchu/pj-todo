{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@molecules/*": ["components/molecules/*"],
      "@styles/*": ["styles/*"],
      "@store/*": ["store/*"],
      "@utils": ["utils"],
      "@consts": ["consts"],
      "@data/*": ["data/*"],
      "@lib/*": ["lib/*"],
      "@api": ["api"]
    },
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "server/server.jsrver.js"
  ],
  "exclude": ["node_modules"]
}
